{
  "compileOnSave": true,
  "compilerOptions": {
      "target": "ES5",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": "./node_modules",
      "typeRoots": [
        "@types",
        "ts/typings"
      ],
      "strict": true,
      "strictNullChecks": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "noEmitOnError": true,
      "outDir": "js/",
      "lib": [
        "es6",
        "es2015.symbol",
        "dom"
      ],

      "experimentalDecorators": true
  },
  "include": [
      "ts/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
